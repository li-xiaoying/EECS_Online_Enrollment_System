<html>

<head>
    <style>
        table tr td {
            border: 1px solid black;
        }

        table.nav tr td {
            border: 0px solid black;
        }
    </style>
</head>

<body>

    <table class="nav" width="100%">
        <tr>
            <td><a href='/'> Home </a></td>
            <td><a href='/students'>Student</a></td>
            <td><a href='/instructors'>Instructor</a></td>
            <td><a href='/classrooms'>Classroom</a></td>
            <td><a href='/courses'>Course</a></td>
            <td><a href='/enrollment'>Enrollment</a></td>
        </tr>
    </table>
    <hr>

    <h1> Read/Delete enrollments:</h1>
    <table>
        <tbody>
            <tr>
                <td>Student ID</td>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Course ID</td>
                <td>Course Name</td>
                <td>Action</td>
            </tr>
            {{#each mapping_data}}
            <tr>
                <td>{{this.student_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.course_id}}</td>
                <td>{{this.course_name}}</td>
                <td>
                    <form method="POST" action="/delete-enrollment">
                        <input type="hidden" name="student_id" value={{this.student_id}}>
                        <input type="hidden" name="course_id" value={{this.course_id}}>
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h1>Create a new enrollment:</h1>

    <form method="POST" action="/create-enrollment">
        <label>Choose a student:</label>
        <select name="student_id">
            {{#each student_data}}
            <option  value="{{this.student_id}}">{{this.student_id}}: {{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>


        <label>Choose a course:</label>
        <select name="course_id">
            {{#each course_data}}
            <option  value="{{this.course_id}}">{{this.course_id}}: {{this.name}}</option>
            {{/each}}
        </select>

        <input type="submit" value="Create" />
    </form>


</body>

</html>